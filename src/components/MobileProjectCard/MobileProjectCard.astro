---
const { title, description, href, bgColor } = Astro.props
---

<div
  style={`background-color: ${bgColor};`}
  class="border-2 border-black p-5
         shadow-[4px_4px_0px_black]
         flex flex-col justify-between gap-4"
>
  <div>
    <h3 class="text-2xl font-newspaper-title mb-2">
      {title}
    </h3>
    <p class="font-newspaper-text text-xs leading-snug">
      {description}
    </p>
  </div>

  <div class="pt-4 border-t border-black border-dotted">
    <a
      href={href}
      target="_blank"
      class="block w-full bg-white text-black text-center py-3 px-4
        text-[11px] font-black uppercase tracking-widest
        border-2 border-black shadow-[4px_4px_0px_black]
        transition-all duration-75 ease-in-out
        active:translate-x-[4px] active:translate-y-[4px] active:shadow-none"
    >
      View Case
    </a>
  </div>
</div>
