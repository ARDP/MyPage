---
const { title, description, href } = Astro.props
---

<div
  class="border-2 border-black p-4 bg-[#f0f0f0]
         shadow-[4px_4px_0px_black]
         flex flex-col justify-between gap-3"
>
  <div>
    <h3 class="text-2xl font-newspaper-title mb-2">
      {title}
    </h3>
    <p class="font-newspaper-text text-xs leading-snug">
      {description}
    </p>
  </div>

  <div class="pt-3 border-t border-black border-dotted">
    <a
      href={href}
      target="_blank"
      class="pow-link text-[10px] uppercase w-full text-center mt-3 block"
    >
