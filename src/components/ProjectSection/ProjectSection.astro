---
import "./ProjectSection.css"
import MobileProjectCard from "../MobileProjectCard/MobileProjectCard.astro"

const projects = [
  {
    title: "HelloFund",
    description:
      "Led the migration of HelloFund to React/Next.js, integrating Salesforce and Stripe. Engineered a high-security donation pipeline, improving platform stability and ensuring non-profits could reliably reach fundraising goals.",
    href: "https://www.capicua.com/work/hellofund",
    desktopColSpan: "md:col-span-3",
    bgColor: "bg-white",
  },
  {
    title: "Power Pickleball",
    description:
      "Architected tournament management tools and community profiles for organizers. Improved scheduling efficiency, player engagement, and streamlined data handling for league operations.",
    href: "https://www.capicua.com/work/power-pickleball",
    desktopColSpan: "md:col-span-1",
    bgColor: "bg-[#f0f0f0]",
  },
  {
    title: "StackSource",
    description:
      "Modernized the real estate SaaS platform by implementing TypeScript enhancements and modular React architecture. Migrated core services to Google Cloud, improving performance, maintainability, and scalability.",
    href: "https://www.capicua.com/work/stacksource",
    desktopColSpan: "md:col-span-1",
    bgColor: "bg-white",
  },
  {
    title: "WurrlyEdu",
    description:
      "Integrated a Learning Management System for music education and scaled architecture to handle a surge in active students. Optimized backend processes and APIs, reduced latency, and improved UX with React and TypeScript.",
    href: "https://www.capicua.com/work/wurrlyedu",
    desktopColSpan: "md:col-span-3",
    bgColor: "bg-[#f0f0f0]",
  },
  {
    title: "MetaReport",
    description:
      "Delivered real-time analytics dashboards with Next.js, GraphQL, and Recharts. Supervised a junior developer and enabled actionable insights for data-driven decision-making.",
    href: "https://metareport.io",
    desktopColSpan: "md:col-span-4",
    bgColor: "bg-[#f9f9f9]",
  },
  // Additional projects from CV
  {
    title: "Tipxy",
    description:
      "Developed the full Flavor Finder front end with React/TypeScript. Integrated AWS Lambda for serverless data handling, improving performance and scalability.",
    href: "https://tipxy.com/pages/flavor-finder",
    desktopColSpan: "md:col-span-3",
    bgColor: "bg-[#fff9f0]",
  },
  {
    title: "Swell",
    description:
      "Integrated HubSpot, Algolia, ShipStation, and Yotpo into the e-commerce platform. Streamlined workflows and improved customer experience.",
    href: "https://swell.is",
    desktopColSpan: "md:col-span-1",
    bgColor: "bg-[#5c42ff]",
  },
  // {
  //   title: "Congreso Interdominacional de Misiones Mundiales 2019",
  //   description:
  //     "Developed a web application for event management and participant engagement, enabling efficient registration and scheduling for hundreds of attendees.",
  //   href: "#",
  //   desktopColSpan: "md:col-span-1",
  //   bgColor: "bg-[#f0f9ff]",
  // },
  // {
  //   title: "Accounting & POS Software",
  //   description:
  //     "Built a custom accounting and point-of-sale solution for small and mid-sized businesses, improving reporting, invoicing, and inventory tracking.",
  //   href: "#",
  //   desktopColSpan: "md:col-span-1",
  //   bgColor: "bg-[#fff0f9]",
  // },
]
---

<section class="mb-10">
  <div
    class="flex flex-col md:flex-row md:items-center justify-between mb-6 border-b-2 border-black pb-2 gap-4"
  >
    <h2 class="text-3xl font-newspaper-title">Projects & Experience</h2>
  </div>

  <!-- Mobile Cards -->
  <div class="grid grid-cols-1 gap-6 md:hidden">
    {
      projects.map((project) => (
        <MobileProjectCard
          title={project.title}
          description={project.description}
          href={project.href}
        />
      ))
    }
  </div>

  <!-- Desktop Cards -->
  <div class="hidden md:grid md:grid-cols-4 gap-6">
    <!-- HelloFund -->
    <a
      href="https://www.capicua.com/work/hellofund"
      target="_blank"
      class="group card-pop md:col-span-3 border-2 border-black p-6 bg-white shadow-[4px_4px_0px_black] relative transition-all hover:-translate-y-1 hover:-translate-x-1 hover:shadow-[8px_8px_0px_black]"
    >
      <h3
        class="text-4xl font-newspaper-title mb-3 leading-tight decoration-1 underline-offset-4 !text-[#2dd3cc]"
      >
        HelloFund
      </h3>
      <p class="font-newspaper-text text-sm mb-4 leading-relaxed">
        Led migration to React/Next.js, integrating Salesforce and Stripe. Built
        a high-security donation pipeline, optimized transaction workflows,
        reduced platform downtime, and mentored junior developers to improve
        front-end quality.
      </p>
      <div
        class="flex justify-between items-end border-t border-black border-dotted pt-4"
      >
        <span
          class="bg-black text-white px-6 py-2 text-xs uppercase font-black tracking-widest group-hover:bg-[#333] transition-colors"
        >
          View Case ↗
        </span>
      </div>
    </a>

    <!-- Power Pickleball -->
    <a
      href="https://www.capicua.com/work/power-pickleball"
      target="_blank"
      class="group card-pop md:col-span-1 border-2 border-black p-4 bg-[#FFF] shadow-[4px_4px_0px_black] flex flex-col justify-between transition-all hover:-translate-y-1 hover:shadow-[6px_6px_0px_black]"
    >
      <div>
        <h3 class="text-2xl font-newspaper-title mb-2 !text-[#008080]">
          Power Pickleball
        </h3>
        <p class="font-newspaper-text text-xs leading-snug">
          Architected tournament management tools and community profiles.
          Improved scheduling, engagement, and streamlined league operations.
        </p>
      </div>
      <div class="pt-4 border-t border-black border-dotted mt-4">
        <span
          class="bg-black text-white px-4 py-2 text-[10px] uppercase font-black tracking-widest group-hover:bg-[#333] transition-colors"
        >
          View Case ↗
        </span>
      </div>
    </a>

    <!-- StackSource -->
    <a
      href="https://www.capicua.com/work/stacksource"
      target="_blank"
      class="group card-pop md:col-span-1 border-2 border-black p-4 bg-white shadow-[4px_4px_0px_black] border-t-8 border-black flex flex-col justify-between transition-all hover:-translate-y-1 hover:shadow-[6px_6px_0px_black]"
    >
      <div>
        <h3 class="text-xl font-newspaper-title mb-2 !text-[#0069d1]">
          StackSource
        </h3>
        <p class="font-newspaper-text text-xs leading-tight opacity-90">
          Modernized real estate SaaS with TypeScript and modular React.
          Migrated to Google Cloud, improving performance and maintainability.
        </p>
      </div>
      <div class="mt-4">
        <span
          class="bg-black text-white px-4 py-2 text-[10px] uppercase font-black tracking-widest group-hover:bg-[#333] transition-colors"
        >
          View Case ↗
        </span>
      </div>
    </a>

    <!-- WurrlyEdu -->
    <a
      href="https://www.capicua.com/work/wurrlyedu"
      target="_blank"
      class="group card-pop md:col-span-3 border-2 border-black p-6 bg-[#FFF] shadow-[4px_4px_0px_black] flex flex-col md:flex-row gap-6 items-center transition-all hover:-translate-y-1 hover:shadow-[8px_8px_0px_black]"
    >
      <div class="flex-1">
        <h3 class="text-3xl font-newspaper-title mb-2 italic !text-[#FFD700]">
          WurrlyEdu
        </h3>
        <p class="font-newspaper-text text-sm leading-tight">
          Integrated an LMS for music education and scaled architecture for a
          surge in active students. Optimized backend processes, reduced
          latency, improved UX, and enhanced front-end React/TypeScript
          interfaces.
        </p>
        <div class="mt-4">
          <span
            class="bg-black text-white px-6 py-2 text-xs uppercase font-black tracking-widest group-hover:bg-[#333] transition-colors"
          >
            View Case ↗
          </span>
        </div>
      </div>
    </a>

    <!-- MetaReport -->
    <a
      href="https://metareport.io"
      target="_blank"
      class="group card-pop md:col-span-4 border-2 border-black p-4 bg-[#FFF] shadow-[4px_4px_0px_black] flex justify-between items-center border-dashed transition-all hover:-translate-y-1 hover:shadow-[6px_6px_0px_black]"
    >
      <div class="flex items-center gap-4">
        <h3 class="text-lg font-newspaper-title italic">MetaReport</h3>
        <p class="font-newspaper-text text-[11px] opacity-80">
          Delivered real-time dashboards with Next.js, GraphQL, and Recharts.
          Supervised a junior developer and enabled actionable insights.
        </p>
      </div>
      <span
        class="bg-black text-white px-4 py-2 text-[10px] uppercase font-black tracking-widest group-hover:bg-[#333] transition-colors"
      >
        View Project ↗
      </span>
    </a>

    <!-- Tipxy + Swell shared row (Tipxy 60%, Swell 40%) -->
    <a
      href="https://tipxy.com/pages/flavor-finder"
      target="_blank"
      class="group card-pop md:col-span-3 border-2 border-black p-6 bg-[#FFF] shadow-[4px_4px_0px_black] flex flex-col justify-between transition-all hover:-translate-y-1 hover:shadow-[8px_8px_0px_black]"
    >
      <h3 class="text-2xl font-newspaper-title mb-3 !text-[#f04f36]">Tipxy</h3>
      <p class="font-newspaper-text text-sm leading-relaxed">
        Built the Flavor Finder front end with React/TypeScript and AWS Lambda
        for serverless data handling, improving performance and scalability.
      </p>
      <div class="mt-4">
        <span
          class="bg-black text-white px-6 py-2 text-xs uppercase font-black tracking-widest group-hover:bg-[#333] transition-colors"
        >
          View Project ↗
        </span>
      </div>
    </a>

    <a
      href="https://swell.is"
      target="_blank"
      class="group card-pop md:col-span-1 border-2 border-black p-4 bg-[#FFF] shadow-[4px_4px_0px_black] flex flex-col justify-between transition-all hover:-translate-y-1 hover:shadow-[6px_6px_0px_black]"
    >
      <div>
        <h3 class="text-xl font-newspaper-title mb-2 !text-[#5c42ff]">Swell</h3>
        <p class="font-newspaper-text text-xs leading-snug">
          Integrated HubSpot, Algolia, ShipStation, and Yotpo into the
          e-commerce platform. Streamlined workflows and improved customer
          experience.
        </p>
      </div>
      <div class="mt-4">
        <span
          class="bg-black text-white px-4 py-2 text-[10px] uppercase font-black tracking-widest group-hover:bg-[#333] transition-colors"
        >
          View Project ↗
        </span>
      </div>
    </a>
  </div>
</section>
